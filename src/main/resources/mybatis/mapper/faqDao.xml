<mapper namespace="com.study.springboot.dao.faqDao">

	<!-- 게시물 조회 -->
	<select id="view" parameterType="int"
		resultType="com.study.springboot.dto.faqDto">
		select
		*
		from
		shopping_faq
		where faq_idx = #{faq_idx}
	</select>



 <sql id="search">
		<if test="searchType != null">
			<if test='searchType.equals("title")'>
				WHERE faq_title LIKE CONCAT('%' || #{keyword},  '%')
			</if>
			<if test='searchType.equals("content")'>
				WHERE faq_content like CONCAT('%' || #{keyword},  '%')
			</if>
			<if test='searchType.equals("title_content")'>
				WHERE faq_title LIKE CONCAT('%'|| #{keyword},  '%')
				or faq_content LIKE CONCAT('%'|| #{keyword},  '%')
			</if>
		</if>
	</sql>


 
	<!-- 게시물 목록 + 페이징 + 검색 -->
 	<select id="listPageSearch"
		resultType="com.study.springboot.dto.faqDto">
		SELECT * FROM(
		SELECT ROWNUM AS RNUM, A.*
		FROM(SELECT *
		FROM shopping_faq
		<include refid="search"></include>	
		ORDER BY faq_idx DESC)
		
		A WHERE ROWNUM <![CDATA[ <= ]]>
		#{displayPost} + #{postNum}
		)
		WHERE RNUM <![CDATA[ > ]]>
		#{displayPost}
	</select>
	<!-- 게시물 총 갯수 + 검색 적용 -->
	<select id="searchCount" parameterType="hashMap"
		resultType="int">
		select count(*) from shopping_faq
<include refid="search"></include>
	</select>
	
	
